{
  "dashboard": {
    "title": "SASTRE AI Dashboard",
    "uid": "sastre-main",
    "tags": ["sastre", "ai", "investigation"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "System Health",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"sastre-orchestrator\"}",
            "legendFormat": "Orchestrator"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "reduceOptions": {"calcs": ["lastNotNull"]}
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "options": {"1": {"text": "UP", "color": "green"}}},
              {"type": "value", "options": {"0": {"text": "DOWN", "color": "red"}}}
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "Circuit Breakers",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "count(sastre_circuit_breaker_state == 2)",
            "legendFormat": "Open Circuits"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Tool Calls Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(sastre_tool_calls_total[5m])) by (tool_name)",
            "legendFormat": "{{tool_name}}"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right"}
        }
      },
      {
        "id": 4,
        "title": "Error Rate by Tool",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "sastre:tool_error_rate:5m",
            "legendFormat": "{{tool_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "max": 1
          }
        }
      },
      {
        "id": 5,
        "title": "Tool Latency (p95)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "sastre:tool_latency_p95:5m",
            "legendFormat": "{{tool_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {"unit": "s"}
        }
      },
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=~\"sastre.*\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "fieldConfig": {
          "defaults": {"unit": "bytes"}
        }
      },
      {
        "id": 7,
        "title": "Circuit Breaker States",
        "type": "table",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "sastre_circuit_breaker_state",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "circuit_name": "Circuit",
                "Value": "State"
              }
            }
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "State"},
              "properties": [
                {
                  "id": "mappings",
                  "value": [
                    {"type": "value", "options": {"0": {"text": "CLOSED", "color": "green"}}},
                    {"type": "value", "options": {"1": {"text": "HALF_OPEN", "color": "yellow"}}},
                    {"type": "value", "options": {"2": {"text": "OPEN", "color": "red"}}}
                  ]
                }
              ]
            }
          ]
        }
      },
      {
        "id": 8,
        "title": "Active Investigations",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sastre_active_investigations",
            "legendFormat": "Active"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      }
    ]
  }
}
